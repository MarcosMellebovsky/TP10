<div class="cont-nomimgs">
  <div class="div-img">
<img src="/img/logo.png" alt="">
</div>
<p>Pelis.com</p>
</div>
<div class="contenedero">
@foreach(var itemS in ViewBag.ListaSeries)
{
    <div class="card" style="width: 18rem;">
  <img src="@itemS.ImagenSerie" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@itemS.Nombre</h5>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="MostrarSerie(@itemS.IdSerie)">
        Ver info serie
    </button>
    <button type="button" class="btn btn-primary hola" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="MostrarTemporadas(@itemS.IdSerie)">
        Temporadas
    </button>
    <div class="centerr">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="MostrarActores(@itemS.IdSerie)">
        Actores
    </button>
    </div>
  </div>
</div>
}
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="Name">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img class="img-fluid" id="ImagenSerie">
        <div id="AñoInicio"></div>
        <div id="Sinopsis"></div>
        <div id="Temporadas"></div>
        <div id="Actores"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="/js/site.js"></script>